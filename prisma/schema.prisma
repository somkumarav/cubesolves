generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CubeType {
  CUBE_22
  CUBE_33
  CUBE_44
}

enum PenaltyType {
  NONE
  PLUS_TWO
  DNF
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?      @map("email_verified")
  image         String?
  password      String?
  accounts      Account[]
  solves        Solve[]
  solveSessions SolveSession[]
  userSettings  UserSetting?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime

  @@unique([email, token])
}

model UserSetting {
  id                   String   @id @default(cuid())
  latestSolveSessionId String
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([latestSolveSessionId])
  @@map("user_settings")
}

model SolveSession {
  id        String    @id @default(cuid())
  name      String?
  userId    String
  cube      CubeType
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  solves    Solve[]
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId, createdAt])
  @@index([userId, deletedAt])
  @@map("sessions")
}

model Solve {
  id             Int           @id @default(autoincrement())
  scramble       String
  cube           CubeType
  rawTime        Int
  time           Int
  penalty        PenaltyType   @default(NONE)
  note           String?
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  solveSessionId String?
  deletedAt      DateTime?
  solveSession   SolveSession? @relation(fields: [solveSessionId], references: [id], onDelete: SetNull)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([solveSessionId])
  @@index([userId, deletedAt, createdAt])
  @@index([userId, cube, deletedAt])
  @@index([createdAt])
}
